{
  "name": "guhd-eats-bot",
  "version": "1.0.0",
  "description": "GUHD EATS Discord bot with VP economy system",
  "main": "dist/src/index.js",
  "type": "module",
  "scripts": {
    "dev": "node src/index.js",
    "build": "tsc -p tsconfig.json && node scripts/generate-runtime-entry.mjs",
    "prebuild": "node scripts/prebuild-validate.cjs --verify-only || echo '⚠️ Prebuild validation warning (non-fatal)'",
    "preflight": "node scripts/validate-roulette-deps.js",
    "preflight:railway": "node scripts/system-requirements.js",
    "start": "node dist/src/index.js",
    "start:health": "node /health-check.js & node dist/src/index.js",
    "postinstall": "node scripts/prisma-generate.cjs || echo '⚠️ Prisma generate warning (non-fatal)'",
    "test": "vitest run --config vitest.config.js",
    "test:watch": "vitest --config vitest.config.js",
    "prisma:generate": "node scripts/prisma-generate.cjs",
    "prisma:validate": "node scripts/validate-prisma.js",
    "prisma:validate-config": "node scripts/validate-prisma.js && prisma validate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "seed": "node scripts/seed.js",
    "deploy:railway": "bash scripts/deploy-railway.sh",
    "health:check": "node scripts/health-check.js",
    "system:validate": "node scripts/system-requirements.js",
    "railway:setup": "railway link && railway up",
    "railway:logs": "railway logs",
    "railway:status": "railway status",
    "rebuild:all": "npm rebuild --build-from-source canvas && npm rebuild sharp && npm rebuild gifencoder",
    "install:deps": "npm install --save canvas gifencoder sharp",
    "validate:full": "npm run prebuild && npm run build",
    "verify:native": "node scripts/prebuild-validate.cjs --verify-only"
  },
  "keywords": [
    "discord",
    "bot",
    "economy",
    "vouch"
  ],
  "author": "GUHD EATS",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "5.21.1",
    "better-sqlite3": "^9.6.0",
    "canvas": "^2.11.2",
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "gif-encoder-2": "^1.0.5",
    "gifencoder": "^2.0.1",
    "sharp": "^0.33.2",
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "prisma": "5.21.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
