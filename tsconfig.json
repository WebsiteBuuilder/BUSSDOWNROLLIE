{
  "compilerOptions": {
    "target": "ES2021",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": false, // [AI FIX]: Explicitly ensure TypeScript emits compiled files
    "outDir": "./dist/src", // [AI FIX]: Output directory matches package.json#main (dist/src/index.js)
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types", ".", "src/types"],
    "types": [],
    "baseUrl": "./src",
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "strictBindCallApply": false,
    "strictPropertyInitialization": false,
    "noImplicitThis": false,
    "alwaysStrict": false
  },
  "include": ["src/**/*", "types.d.ts", "src/types/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
