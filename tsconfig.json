{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "outDir": "dist",
    "types": ["node"],
    "baseUrl": "src"
  },
  "include": ["src/**/*", "scripts/**/*", "types.d.ts"],
  "exclude": ["node_modules", "dist"]
}
